#include <iostream>
#include <cmath>
using namespace std;
class CHealth {
public:
	CHealth() {};
	CHealth(int a) { age = a; }
	int age;
	float cel, faren;
	void cel2faren() {
		faren = cel * 9.0 / 5.0 + 32.0;
	}
	void faren2cel() {
		cel = (faren - 32) * 5.0 / 9.0;
	}
	void measureCel() {
		cel = rand() % 10 + 30.0;
		cel2faren();
	}
};

int main() {
	CHealth VIP(65), * mario, VIP2(23), * mickey;
	mario = new CHealth(70);
	mickey = new CHealth(42);
	cout << " " << VIP.age << " " << mario->age << endl;
	cout << " " << VIP2.age << " " << mickey->age << endl;
	VIP.measureCel();  VIP2.measureCel();
	mario->measureCel();  mickey->measureCel();
	cout << " " << VIP.cel << "C " << mario->faren << "F \n";
	cout << " " << VIP2.cel << "C " << mickey->faren << "F \n";
	cout << "  size " << sizeof(CHealth) << "\n";
	return 1;
}
