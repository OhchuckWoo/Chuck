Siha[] aa;
void setup(){
  size(1000,800);
  aa = new Siha[3];
  for (int i=0; i<3; i++) { 
    aa[i] = new Siha(100+200*i, 100+50*i, 10+5*i);
    aa[i].vx = 1.5*(1+i); aa[i].vy = i+1;
  }
}
void draw(){
  background(180);
  for (int i = 0; i<3; i++){
    aa[i].Life();
    aa[i].act();
  }
}

class Siha{
  float x, y, d, vx, vy;
  int colorOption;
  Siha(float x, float y, float d) { 
  this.x = x; this.y =y; this.d = d; 
  float xx = int(random(4));
  if (xx<1) colorOption = 0;
  else if (xx<2) colorOption = 1;
  else if (xx<3) colorOption = 2;
  else colorOption = 3;}
  
  void Life(){
    if (colorOption == 0) fill(255);
    else if (colorOption == 1) fill(255, 0, 0);
    else if (colorOption == 2) fill(0, 255, 0);
    else fill(0, 0, 255);
    ellipse(x,y,d*10,d*6);
    circle(x-d*2,y-d*1.5,d*2);
    arc(x+d*2,y-d*1.5,d*2,d*2,PI,2*PI);
    arc(x,y,d*6,d*2,0,PI);
  }
  void act(){
    x += vx;
    y += vy;
    if (x > width || x < 0) vx = -vx;
    if (y > height || y < 0) vy = -vy;
  }
}
